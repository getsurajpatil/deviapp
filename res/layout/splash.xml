    android:layout_height="fill_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
       
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bigsizedashboardimage_02" >
        
       <!--  <ImageView android:src="@drawable/dashboard286_fade2" android:id="@+id/backlayout" android:layout_height="fill_parent" android:layout_width="fill_parent"/> -->

