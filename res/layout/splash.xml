        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/footer"
            android:layout_below="@+id/header" 
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/dash_back"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp" >

                         <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="fill_parent"
                             android:layout_gravity="center"
                             android:gravity="center_horizontal"
                             android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/image_photos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/photos_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Photos"
                            android:textColor="#B80303"
                            android:textSize="15dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/dash_back"
                        android:orientation="vertical"
                        android:padding="5dp" >

                         <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="fill_parent"
                             android:layout_gravity="center"
                             android:gravity="center_horizontal"
                             android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/image_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/bhaktigeet_wb" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bhakti Geet"
                            android:textColor="#B80303"
                            android:textSize="15dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/dash_back"
                        android:orientation="vertical"
                        android:padding="5dp" >

                          <LinearLayout
                              android:layout_width="wrap_content"
                              android:layout_height="fill_parent"
                              android:layout_gravity="center"
                              android:gravity="center_horizontal"
                              android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/image_mekeWish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/placewish2_wb" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pray Wish"
                            android:textColor="#B80303"
                            android:textSize="15dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/dash_back"
                        android:orientation="vertical"
                        android:padding="5dp" >

                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="fill_parent"
                               android:layout_gravity="center"
                               android:gravity="center_horizontal"
                               android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/image_onlinePooja"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/onlinepooja_wb2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Puja Prasad"
                            android:textColor="#B80303"
                            android:textSize="15dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/dash_back"
                        android:orientation="vertical"
                        android:padding="5dp" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:gravity="center_horizontal"
                                android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/image_liveDarshan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/livedarshan_wb" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Darshan"
                            android:textColor="#B80303"
                            android:textSize="15dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/dash_back"
                        android:orientation="vertical"
                        android:padding="5dp" >

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="fill_parent"
     android:layout_gravity="center_horizontal"
     android:gravity="center_horizontal"
     android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/image_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/festival_wb" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Festivals   "
                            android:textColor="#B80303"
                            android:textSize="15dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tab_back"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Live: Dasara Festival 2013"
                android:textColor="#B80303"
                android:textSize="20dp" />
         </LinearLayout>
    </RelativeLayout>

  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/curtain_layout1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/curtain" >
        </ImageView>  

        
   <!--  <ImageView
        android:id="@+id/curtain_layout2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/woodendoor1" >
    </ImageView> -->

    </LinearLayout>    

</merge>